<Window x:Class="DeskWatch.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to DeskWatch" Height="400" Width="600" WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" WindowStyle="None" Background="#1E1E2F" FontFamily="Segoe UI">
    <Grid>
        <Border Background="#23233A" CornerRadius="24" Padding="40" Margin="40" Effect="{DynamicResource DropShadowEffect}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock Text="DeskWatch" FontSize="36" FontWeight="Bold" Foreground="#4F8EF7" HorizontalAlignment="Center" Margin="0,0,0,12"/>
                <TextBlock Text="Track your app usage in style" FontSize="18" Foreground="#F3F3F3" HorizontalAlignment="Center" Margin="0,0,0,24"/>
                <TextBlock Text="Welcome! DeskWatch helps you understand where your time goes by tracking your activity across all apps."
                           FontSize="15" Foreground="#B0B0B0" TextAlignment="Center" Margin="0,0,0,32"/>
                <Button Content="Continue" Width="180" Height="48" FontSize="16" FontWeight="SemiBold" Background="#4F8EF7" Foreground="White"
                        BorderThickness="0" Cursor="Hand" Click="Continue_Click" 
                        Style="{DynamicResource {x:Type Button}}"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
