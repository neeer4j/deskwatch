<Window x:Class="DeskWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskWatch"
        mc:Ignorable="d"
        Title="DeskWatch" Height="600" Width="1000" MinHeight="400" MinWidth="700"
        Background="#1E1E2F" FontFamily="Segoe UI" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Color x:Key="AccentColor">#4F8EF7</Color>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="PanelBackground" Color="#23233A"/>
        <SolidColorBrush x:Key="CardBackground" Color="#23233A"/>
        <SolidColorBrush x:Key="CardSelectedBackground" Color="#2D3A5A"/>
        <SolidColorBrush x:Key="TextBrush" Color="#F3F3F3"/>
        <Style x:Key="AppCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Width" Value="180"/>
            <Setter Property="Height" Value="120"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12" ShadowDepth="2" Color="#22000000"/>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSelected}" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardSelectedBackground}"/>
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </DataTrigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,16,0"/>
            <Setter Property="MinWidth" Value="110"/>
            <Setter Property="Height" Value="44"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="22" Height="44" SnapsToDevicePixels="True" 
                                Effect="{DynamicResource DropShadowEffect}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#5CA9FF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3574D4"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#444"/>
                                <Setter Property="Foreground" Value="#AAA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect" BlurRadius="8" ShadowDepth="2" Color="#22000000"/>
    </Window.Resources>
    <DockPanel>
        <Border Background="{StaticResource PanelBackground}" CornerRadius="12" Margin="12" Padding="16" DockPanel.Dock="Top">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Button x:Name="StartButton" Click="StartButton_Click">Start</Button>
                <Button x:Name="StopButton" Click="StopButton_Click" IsEnabled="False">Stop</Button>
                <Button x:Name="ResetButton" Click="ResetButton_Click">Reset</Button>
                <TextBlock Margin="24,0,0,0" VerticalAlignment="Center" FontSize="15" Opacity="0.8">
                    Tracking active window every 1s. Click a card for details.
                </TextBlock>
            </StackPanel>
        </Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <!-- App Cards -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="12">
                <ItemsControl ItemsSource="{Binding AppUsages}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Style="{StaticResource AppCardStyle}"
                                    MouseLeftButtonUp="AppCard_Click"
                                    Tag="{Binding}">
                                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <Image Source="{Binding Icon}" Width="40" Height="40" Margin="0,0,0,8"/>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="Bold" FontSize="15" TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding FormattedTotal}" FontSize="13" Opacity="0.8" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
            <!-- Details Panel -->
            <Border Grid.Column="1" Background="#23233A" CornerRadius="16" Margin="12" Padding="24">
                <StackPanel>
                    <TextBlock Text="App Details" FontSize="18" FontWeight="Bold" Margin="0,0,0,16"/>
                    <StackPanel x:Name="DetailsPanel" Visibility="Collapsed">
                        <Image x:Name="DetailsIcon" Width="48" Height="48" Margin="0,0,0,12"/>
                        <TextBlock x:Name="DetailsName" FontSize="16" FontWeight="Bold"/>
                        <TextBlock x:Name="DetailsTime" FontSize="14" Margin="0,8,0,0"/>
                        <!-- Add more stats here if needed -->
                    </StackPanel>
                    <TextBlock x:Name="NoSelectionText" Text="Select an app card to see details." Opacity="0.7"/>
                </StackPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
