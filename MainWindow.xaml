<Window x:Class="DeskWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeskWatch"
        mc:Ignorable="d"
        Title="DeskWatch" Height="500" Width="820" MinHeight="400" MinWidth="640">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8" VerticalAlignment="Center">
            <Button x:Name="StartButton" Width="90" Margin="0,0,8,0" Click="StartButton_Click">Start</Button>
            <Button x:Name="StopButton" Width="90" Margin="0,0,8,0" Click="StopButton_Click" IsEnabled="False">Stop</Button>
            <Button x:Name="ResetButton" Width="90" Click="ResetButton_Click">Reset</Button>
            <TextBlock Margin="16,0,0,0" VerticalAlignment="Center">
                Tracking active window every 1s. Data is in-memory only.
            </TextBlock>
        </StackPanel>
        <DataGrid x:Name="UsageGrid" Margin="8" IsReadOnly="True" AutoGenerateColumns="False"
                  ItemsSource="{Binding AppUsages}" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Application" Binding="{Binding DisplayName}" Width="*"/>
                <DataGridTextColumn Header="Time" Binding="{Binding FormattedTotal}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
